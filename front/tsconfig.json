{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",

    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",

    /* Additional Checks */
//    "pretty": true,
//    "noUnusedLocals": true,
//    "noUnusedParameters": true,
//    "noImplicitReturns": true,
//    "noFallthroughCasesInSwitch": true,
//    "declaration": true,
//    "declarationMap": true,
//    "noImplicitAny": true,

    "importHelpers": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "webpack-env"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
